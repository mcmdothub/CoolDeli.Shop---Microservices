@{
    Layout = "/Views/Shared/_Layout.cshtml";
}

<!-- inner banner -->
<div class="inner-banner">
    <section class="w3l-breadcrumb">
        <div class="container">
            <h4 class="inner-text-title font-weight-bold mb-sm-3 mb-2">Manage your account</h4>
            <ul class="breadcrumbs-custom-path">
                <li><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                <li class="active"><span class="fa fa-chevron-right mx-2" aria-hidden="true"></span> Manage your account</li>
            </ul>
        </div>
    </section>
</div>
<!-- //inner banner -->
<!-- Manage your account -->

<div>
    <hr />
    <h4>Change your account settings</h4>
    <hr />
    <div class="row">
        <div class="col-md-3">
            @await Html.PartialAsync("_ManageNav")
        </div>
        <div class="col-md-9">
            @RenderBody()
        </div>
    </div>
</div>

@section Scripts {
    @RenderSection("Scripts", required: false)
}

