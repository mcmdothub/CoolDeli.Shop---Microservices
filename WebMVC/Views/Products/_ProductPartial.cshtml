<div class="col-sm-12 col-md-6 col-lg-4 d-flex justify-content-around flex-wrap mb-2">

    <div class="card card-product border shadow m-2 p-2 rounded flex-grow-0 flex-sm-shrink-1 flex-md-shrink-0">
        <a asp-action="Details" asp-route-id="@Model.Id">
            <div class="card-img-top rounded">
                <img src="@Model.Photo" alt="@Model.Name" class="img-fluid" />
            </div>
        </a>
        <div class="card-body pt-2 pb-0">
            <h5 class="card-title text-uppercase mb-1">@Model.Name</h5>
            <p class="text-uppercase font-weight-light" style="font-size: 0.8rem">@Html.DisplayFor(modelItem => Model.Description)</p>

            <div class="d-flex justify-content-between mb-1">
                <h3 class="font-weight-light m-0 p-0">@Model.Price.ToString("C")</h3>
                <span class="align-self-center">
                    In stock:
                    @if (Model.Quantity > 0)
                    {
                        <i class="fas fa-check text-success"></i>
                    }
                    else
                    {
                        <i class="fas fa-times text-danger align-middle"></i>
                    }
                </span>
            </div>
        </div>

        <button type="button" onclick="AddToCart('@Model.Id')" class="btn btn-success m-3 text-white text-uppercase"><i class="fas fa-cart-plus"></i> Add to cart</button>

    </div>

</div>